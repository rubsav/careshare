<h1>Hello! <%= @user.username %> Welcome to your profile!</h1>
<div class="account-links">
	<p class="p-account-links"><%= link_to "Update Account Information", edit_user_path(@user) %></p>
	<p class="p-account-links"><%= link_to "Delete Account", @user, method: :delete, data: {confirm: "Are you sure you want to delete this user?"}  %></p>
</div>

<p> Name: <%= @user.first_name %></p>
<p> Last Name: <%= @user.last_name %></p>
<p> Email: <%= @user.email %></p>

<h4 class= "account-heading"> Your reviews </h4>
<div class= "user-reviews">
	<% @user.reviews.each do |review| %>
	<li class="user-review">
		<p>For <%=link_to(review.provider.first_name, provider_path(review.provider))  %> 
		your review is:
		<%=review.comment %>
		<p class="edit-review"><%= link_to 'Edit Review', edit_provider_review_path(review.provider, review) %></p>
		<p class ="delete-review"><%= link_to 'Delete Review', provider_review_path(review.provider, review), method: :delete, data: {confirm: "Are you sure?"}  %></p>
		</p>
		

	</li>
	<% end %>
</div>

<h4 class= "account-heading">Your Ratings</h4>

<div class = "user-ratings">
	<% @user.ratings.each do |rating| %>
	<li class="user-rating">
		For <%=link_to(rating.provider.first_name, provider_path(rating.provider))  %> 
		your rating is:
		<%= link_to 'Edit rating', edit_provider_rating_path(rating.provider, rating) %>
	</li>
	<% end %>
	<br>
</div>


<h4 class= "account-heading"> The providers you have added </h4>

<div>
	<% @providers.each do |provider| %>
		Provider: <%= link_to provider.first_name, provider_path(provider) %> | 
		<%= link_to 'Edit this provider', edit_provider_path(provider) %>
		<%= link_to 'Delete this provider', provider, method: :delete, data: {confirm: "Are you sure you want to delete this provider?"}  %>
	<% end %>

	
</div>




